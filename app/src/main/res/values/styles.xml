<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:background">@color/windowBackground</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="android:buttonStyle">@style/hannaButtonStyle</item>
        <item name="android:editTextStyle">@style/hannaEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/hannaRadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/hannaCheckboxStyle</item>
        <item name="android:textViewStyle">@style/hannaTextViewStyle</item>

    </style>

    <!--Font Style Total Customize-->
    <style name="hannaTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/hanna</item>
    </style>
    <style name="hannaButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/hanna</item>
    </style>
    <style name="hannaEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/hanna</item>
    </style>
    <style name="hannaRadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/hanna</item>
    </style>
    <style name="hannaCheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/hanna</item>
    </style>

</resources>