    <!-- ProgressBar Set -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp">


    <!-- SET1 : kcal -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kcal"
            android:textAlignment="textStart"
            android:layout_marginRight="10sp"
            android:layout_weight="8"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5sp"
        android:weightSum="10">

        <TextView
            android:id="@+id/kcalStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="start"/>

        <ProgressBar
            android:id="@+id/kcalProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="10"
            android:layout_weight="8"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:progressDrawable="@drawable/kcal_progress"
            style="?android:attr/progressBarStyleHorizontal"/>

        <TextView
            android:id="@+id/kcalEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:text="end"/>

    </LinearLayout>


    <!-- SET2 : carbon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탄수화물"
            android:textAlignment="textStart"
            android:layout_marginRight="10sp"
            android:layout_weight="8"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5sp"
        android:weightSum="10">

        <TextView
            android:id="@+id/carboStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="start"/>

        <ProgressBar
            android:id="@+id/carbonProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="25"
            android:layout_weight="8"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:progressDrawable="@drawable/kcal_progress"
            style="?android:attr/progressBarStyleHorizontal"/>

        <TextView
            android:id="@+id/carboEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:text="end"/>

    </LinearLayout>

    <!-- SET3 : protein -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단백질"
            android:textAlignment="textStart"
            android:layout_marginRight="10sp"
            android:layout_weight="8"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5sp"
        android:weightSum="10">

        <TextView
            android:id="@+id/proteinStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="start"/>

        <ProgressBar
            android:id="@+id/proteinProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="50"
            android:layout_weight="8"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:progressDrawable="@drawable/kcal_progress"
            style="?android:attr/progressBarStyleHorizontal"/>

        <TextView
            android:id="@+id/proteinEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:text="end"/>

    </LinearLayout>

    <!-- SET3 : fat -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지방"
            android:textAlignment="textStart"
            android:layout_marginRight="10sp"
            android:layout_weight="8"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/fatStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="start"/>

        <ProgressBar
            android:id="@+id/fatProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="75"
            android:layout_weight="8"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:progressDrawable="@drawable/kcal_progress"
            style="?android:attr/progressBarStyleHorizontal"/>

        <TextView
            android:id="@+id/fatEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:text="end"/>

    </LinearLayout>

    </LinearLayout>


    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/piechart">

    </com.github.mikephil.charting.charts.PieChart>


</LinearLayout>