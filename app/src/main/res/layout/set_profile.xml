<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"

        android:layout_margin="20dp">

        <TextView
            android:id="@+id/startTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editInfo"

            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/UserName" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="홍길동"
                />

        </LinearLayout>


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <TextView
            android:id="@+id/ageT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나이" />

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

          <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

              <TextView
                  android:id="@+id/weightT"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="몸무게" />

              <EditText
                  android:id="@+id/weight"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:ems="10"
                  android:inputType="number"
                  android:hint="kg 단위"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heightT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="키" />

            <EditText
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="cm 단위"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sexT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:layout_weight="0.3"
                />

            <RadioGroup
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.7">
            <RadioButton
                android:id="@+id/sex1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"

                android:layout_weight="0.3"/>

            <RadioButton
                android:id="@+id/sex2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여"

                android:layout_weight="0.3"/>
            </RadioGroup>


        </LinearLayout>


        <TextView
            android:id="@+id/starBottomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOOIDARY"
            android:gravity="center"/>


        <!-- 버튼 클릭시 setProfile.java 실행 -->

        <Button
            android:id="@+id/startFoodiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_green_bt"
            android:fontFamily="@font/hanna"
            android:text="시작하기" />


    </LinearLayout>




</android.support.constraint.ConstraintLayout>